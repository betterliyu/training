{
  "name": "es-next-training",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Eden Li",
  "license": "MIT",
  "scripts": {
    "lint": "eslint **/*.js",
    "fix": "eslint **/*.js --fix"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "git add"
    ]
  }
}