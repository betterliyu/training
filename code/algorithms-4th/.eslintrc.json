{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:mocha/recommended"],
  "plugins": ["mocha"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "mocha/no-mocha-arrows": "off"
  }
}
